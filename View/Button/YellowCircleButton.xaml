<UserControl
    x:Class="Calculator.View.Button.YellowCircleButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator.View.Button"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="80"
    d:DesignWidth="80"
    mc:Ignorable="d">
    <Grid>
        <Button
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button_Click"
            Content="{Binding ButtonContent, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
            Cursor="Hand"
            FontSize="20"
            FontWeight="Bold"
            Style="{StaticResource YellowCircleButtonStyle}" />
    </Grid>
</UserControl>
