<Window
    x:Class="Calculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControl="clr-namespace:Calculator.View.Button"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Calculator"
    Width="335"
    Height="600"
    Icon="/icons8-calculator-256.png"
    ResizeMode="CanMinimize"
    SizeToContent="Manual"
    mc:Ignorable="d">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="400" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="history"
                Grid.Row="1"
                Margin="10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="26"
                Foreground="Gray" />
            <TextBlock
                x:Name="calculator"
                Grid.Row="2"
                Margin="10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="50"
                FontWeight="Bold"
                Foreground="White" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <UserControl:CircleButton
                Grid.Row="0"
                Grid.Column="0"
                ButtonContent="AC" />
            <UserControl:CircleButton
                Grid.Row="0"
                Grid.Column="1"
                ButtonContent="+/-" />
            <UserControl:CircleButton
                Grid.Row="0"
                Grid.Column="2"
                ButtonContent="%" />
            <UserControl:CircleButton
                Grid.Row="1"
                Grid.Column="0"
                ButtonContent="9" />
            <UserControl:CircleButton
                Grid.Row="1"
                Grid.Column="1"
                ButtonContent="8" />
            <UserControl:CircleButton
                Grid.Row="1"
                Grid.Column="2"
                ButtonContent="7" />
            <UserControl:CircleButton
                Grid.Row="2"
                Grid.Column="0"
                ButtonContent="6" />
            <UserControl:CircleButton
                Grid.Row="2"
                Grid.Column="1"
                ButtonContent="5" />
            <UserControl:CircleButton
                Grid.Row="2"
                Grid.Column="2"
                ButtonContent="4" />
            <UserControl:CircleButton
                Grid.Row="3"
                Grid.Column="0"
                ButtonContent="1" />
            <UserControl:CircleButton
                Grid.Row="3"
                Grid.Column="1"
                ButtonContent="2" />
            <UserControl:CircleButton
                Grid.Row="3"
                Grid.Column="2"
                ButtonContent="3" />
            <UserControl:CircleButton
                Grid.Row="4"
                Grid.Column="0"
                ButtonContent="00" />
            <UserControl:CircleButton
                Grid.Row="4"
                Grid.Column="1"
                ButtonContent="0" />
            <UserControl:CircleButton
                Grid.Row="4"
                Grid.Column="2"
                ButtonContent="." />
            <UserControl:YellowCircleButton
                Grid.Row="0"
                Grid.Column="3"
                ButtonContent="/" />
            <UserControl:YellowCircleButton
                Grid.Row="1"
                Grid.Column="3"
                ButtonContent="x" />
            <UserControl:YellowCircleButton
                Grid.Row="2"
                Grid.Column="3"
                ButtonContent="-" />
            <UserControl:YellowCircleButton
                Grid.Row="3"
                Grid.Column="3"
                ButtonContent="+" />
            <UserControl:YellowCircleButton
                Grid.Row="4"
                Grid.Column="3"
                ButtonContent="=" />
        </Grid>
    </Grid>
</Window>
